<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.SimpleKeyboardActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/ready"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/connectionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/not_connected"
        android:textAlignment="center"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusText" />

    <Button
        android:id="@+id/advertisingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/start_advertising"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connectionText" />

    <!-- Diagnostic Information Panel -->
    <androidx.cardview.widget.CardView
        android:id="@+id/diagnosticPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advertisingButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diagnostic Info"
                android:textStyle="bold"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/deviceNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Device Name: Unknown"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/deviceAddressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Device Address: Unknown"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pairingStateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Pairing State: None"
                android:textSize="12sp" />
                
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Event Log:"
                android:textStyle="bold"
                android:textSize="12sp" />
                
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#F5F5F5">
                
                <TextView
                    android:id="@+id/logText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    android:text="" />
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Keyboard layout -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diagnosticPanel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First row: Q W E R T Y U I O P -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonQ"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_q" />

                <Button
                    android:id="@+id/buttonW"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_w" />

                <Button
                    android:id="@+id/buttonE"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_e" />

                <Button
                    android:id="@+id/buttonR"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_r" />

                <Button
                    android:id="@+id/buttonT"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_t" />

                <Button
                    android:id="@+id/buttonY"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_y" />

                <Button
                    android:id="@+id/buttonU"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_u" />

                <Button
                    android:id="@+id/buttonI"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_i" />

                <Button
                    android:id="@+id/buttonO"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_o" />

                <Button
                    android:id="@+id/buttonP"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_p" />
            </LinearLayout>

            <!-- Second row: A S D F G H J K L -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonA"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_a" />

                <Button
                    android:id="@+id/buttonS"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_s" />

                <Button
                    android:id="@+id/buttonD"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_d" />

                <Button
                    android:id="@+id/buttonF"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_f" />

                <Button
                    android:id="@+id/buttonG"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_g" />

                <Button
                    android:id="@+id/buttonH"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_h" />

                <Button
                    android:id="@+id/buttonJ"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_j" />

                <Button
                    android:id="@+id/buttonK"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_k" />

                <Button
                    android:id="@+id/buttonL"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_l" />
            </LinearLayout>

            <!-- Third row: Z X C V B N M -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonZ"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_z" />

                <Button
                    android:id="@+id/buttonX"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_x" />

                <Button
                    android:id="@+id/buttonC"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_c" />

                <Button
                    android:id="@+id/buttonV"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_v" />

                <Button
                    android:id="@+id/buttonB"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_b" />

                <Button
                    android:id="@+id/buttonN"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_n" />

                <Button
                    android:id="@+id/buttonM"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_m" />
            </LinearLayout>

            <!-- Fourth row: Special keys -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonSpace"
                    android:layout_width="180dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_space" />

                <Button
                    android:id="@+id/buttonEnter"
                    android:layout_width="80dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_enter" />

                <Button
                    android:id="@+id/buttonBackspace"
                    android:layout_width="80dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="@string/key_backspace" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
