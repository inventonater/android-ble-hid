<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.SimpleMouseActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BLE HID Mouse"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/ready"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/connectionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/not_connected"
        android:textAlignment="center"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusText" />

    <LinearLayout
        android:id="@+id/controlButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connectionText">

        <Button
            android:id="@+id/advertisingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/start_advertising" />

        <Button
            android:id="@+id/pairingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pairing Action" />
    </LinearLayout>

    <!-- Diagnostic Information Panel -->
    <androidx.cardview.widget.CardView
        android:id="@+id/diagnosticPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/controlButtonsLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diagnostic Info"
                android:textStyle="bold"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/deviceNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Device Name: Unknown"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/deviceAddressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Device Address: Unknown"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pairingStateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Pairing State: None"
                android:textSize="12sp" />
                
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Event Log:"
                android:textStyle="bold"
                android:textSize="12sp" />
                
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#F5F5F5">
                
                <TextView
                    android:id="@+id/logText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    android:text="" />
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Mouse Control Panel -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mouseControlPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintHeight_min="200dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diagnosticPanel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Mouse Touchpad Area -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mouse Movement Area"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <View
                android:id="@+id/touchpadArea"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#E0E0E0"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <!-- Mouse Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/leftButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="LEFT"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/middleButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="MIDDLE"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/rightButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="RIGHT" />
            </LinearLayout>

            <!-- Scroll Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/scrollUpButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="SCROLL UP"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/scrollDownButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="SCROLL DOWN" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Keyboard Control Panel -->
    <androidx.cardview.widget.CardView
        android:id="@+id/keyboardControlPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mouseControlPanel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keyboard"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Modifier Keys -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/keyCtrl"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="CTRL"
                    android:textSize="10sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/keyShift"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="SHIFT"
                    android:textSize="10sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/keyAlt"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="ALT"
                    android:textSize="10sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/keyMeta"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="META"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Basic Keys -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/keyA"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="A"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/keyB"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="B"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/keyC"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="C"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/keySpace"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:text="SPACE"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Function Keys -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/keyEsc"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="ESC"
                    android:textSize="10sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/keyEnter"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="ENTER"
                    android:textSize="10sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/keyDelete"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="DEL"
                    android:textSize="10sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/keyTab"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="TAB"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Media Control Panel -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mediaControlPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyboardControlPanel"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Media Controls"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Media Buttons Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/mediaPlayPause"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="PLAY/PAUSE"
                    android:textSize="10sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/mediaPrev"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="PREV"
                    android:textSize="10sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/mediaNext"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="NEXT"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Media Buttons Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/mediaVolDown"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="VOL -"
                    android:textSize="10sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/mediaMute"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="MUTE"
                    android:textSize="10sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/mediaVolUp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="VOL +"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
