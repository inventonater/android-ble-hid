<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.SimpleMediaActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BLE HID Media Controller"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/ready"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/connectionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/not_connected"
        android:textAlignment="center"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusText" />

    <Button
        android:id="@+id/advertisingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/start_advertising"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connectionText" />

    <!-- Diagnostic Information Panel -->
    <androidx.cardview.widget.CardView
        android:id="@+id/diagnosticPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advertisingButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diagnostic Info"
                android:textStyle="bold"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/deviceNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Device Name: Unknown"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/deviceAddressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Device Address: Unknown"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pairingStateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Pairing State: None"
                android:textSize="12sp" />
                
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Event Log:"
                android:textStyle="bold"
                android:textSize="12sp" />
                
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#F5F5F5">
                
                <TextView
                    android:id="@+id/logText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    android:text="" />
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Media Control Panel -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mediaControlPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diagnosticPanel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Tab controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                
                <Button
                    android:id="@+id/mediaTabButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MEDIA"
                    android:backgroundTint="#3F51B5"
                    android:textColor="#FFFFFF" />
                    
                <Button
                    android:id="@+id/mouseTabButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MOUSE"
                    android:backgroundTint="#9E9E9E"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
            
            <!-- Content container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <!-- Media Control Buttons -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Media Controls"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Play Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <Button
                        android:id="@+id/previousButton"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="PREVIOUS"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/playPauseButton"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="PLAY/PAUSE"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/nextButton"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="NEXT"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Volume Controls -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Volume Controls"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <Button
                        android:id="@+id/volumeDownButton"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="VOLUME -"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/muteButton"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="MUTE"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/volumeUpButton"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="VOLUME +"
                        android:textSize="12sp" />
                </LinearLayout>
                
                <!-- Mouse Control Section -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDDDDD"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"/>
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mouse Controls"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />
                
                <!-- Touchpad area -->
                <FrameLayout
                    android:id="@+id/touchpadArea"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#EEEEEE"
                    android:layout_marginBottom="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TOUCHPAD"
                        android:textStyle="bold"
                        android:alpha="0.3"
                        android:textSize="24sp"/>
                </FrameLayout>
                
                <!-- Mouse Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">
                    
                    <Button
                        android:id="@+id/leftButton"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="LEFT"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />
                        
                    <Button
                        android:id="@+id/middleButton"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="MIDDLE"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />
                        
                    <Button
                        android:id="@+id/rightButton"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="RIGHT"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
